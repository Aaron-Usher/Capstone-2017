<Window x:Class="WpfPresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snack Overflow" Height="800" Width="1300" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <!--
        Updated: 2017/04/14
        By: Alissa Duffy 
        Summary: Comments and Standardization
    -->
    <!--Main Grid-->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images\wpfMainImageBlur.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <!--Grid Definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--End of Grid Definitions-->
        <!--Menu Group Controls -->
        <Menu Grid.Row="0" Background="#FF7A876F" Foreground="White">
            <MenuItem  Header="File" >
                <MenuItem Name="mnuQuit" Header="Quit" Background="#FF7A876F"  HorizontalAlignment="Left" Width="120" Click="mnuQuit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit" >
                <MenuItem Name="mnuPrefernces" Header="Preferences" Background="#FF7A876F" HorizontalAlignment="Left" Width="Auto"/>
            </MenuItem>
            <MenuItem Header="User Settings">
                <MenuItem Name="mnuRequestUsername" Header="Request Username" Background="#FF7A876F"  Click="mnuRequestUsername_OnClick" HorizontalAlignment="Left" Width="Auto"/>
                <MenuItem Name="mnuChangePassword" Header="Change Password" Visibility="Collapsed" Click="mnuChangePassword_OnClick" HorizontalAlignment="Left" Width="Auto"/>
            </MenuItem>
            <MenuItem Header="Help" >
                <MenuItem Name="mnuHelp" Header="Help" Background="#FF7A876F"  HorizontalAlignment="Left" Width="118"/>
                <MenuItem Name="mnuAbout" Header="About" Background="#FF7A876F"  HorizontalAlignment="Left" Width="Auto"/>
            </MenuItem>
            <MenuItem Header="Inventory Settings" >
                <MenuItem Name="mnuPreferences" Background="#FF7A876F"  Click="MnuPreferences_OnClick" Header="Preferences" HorizontalAlignment="Left" Width="Auto"/>
            </MenuItem>
        </Menu>
        <!--End of Menu Controls-->
        <!--Username and Password Controls Grid-->
        <Grid Name="LoginBar" Grid.Row="1" AllowDrop="True">
            <Grid.Background>
                <ImageBrush ImageSource="Images\loginBarBlur.png" Stretch="UniformToFill"/>
            </Grid.Background>
            <!--Grid Definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="311*"  />
                <ColumnDefinition Width="218*"  />
                <ColumnDefinition Width="93*"/>
                <ColumnDefinition Width="312*"  />
                <ColumnDefinition Width="311*"  />
                <ColumnDefinition  Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--End of Grid Definitions-->
            <!--Username and Password Controls-->
            <TextBox Name="txtUsername" Grid.Column="3" Grid.Row="0" Margin="3 4 3 0" MaxLength="20" MaxLines="1" Background="#FFC2CEA7"/>
            <Label Name="lblUsername" Grid.Column="3" Grid.Row="1" Content="Username" Padding="0" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" Foreground="White" />
            <PasswordBox Name="pwbPassword" Grid.Column="4" Grid.Row="0" Margin="3 4 3 0" KeyDown="pwbPassword_KeyDown" Background="#FFC2CEA7"/>
            <Label Name="lblPassword" Grid.Column="4" Grid.Row="1" Content="Password" Padding="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" Foreground="White"/>
            <Button Name="btnLogin" Grid.Column="5" Grid.Row="0" Content="Login" Padding="10 0" FontSize="12"  IsDefault="True" Click="btnLogin_Click" Margin="0,4,0,0" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FF7A876F" Offset="0.674"/>
                        <GradientStop Color="#FF88A78E" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
        <!--End of Username and Password Control Grid-->
        <!--Main Tab Controls-->
        <Image Name="MainImage" Grid.Row="2" Visibility="Collapsed" Stretch="UniformToFill" />
        <TabControl Name="tabSetMain" Grid.Row="2" >
            <!--Commercial Customer Tab Controls -->
            <TabItem Name="tabCommercialCustomer" Header="Customer" HorizontalAlignment="Left" Margin="0" Width="Auto" GotFocus="tabCommercialCustomer_GotFocus"  Selector.Selected="tabCustomer_Selected">
                <!--Commercial Customer Tab Grid-->
                <Grid >
                    <!--Grid Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="28*"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="1211*"/>
                    </Grid.ColumnDefinitions>
                    <!--End of Grid Definitions-->
                    <!--Customer Date Grid-->
                    <DataGrid Name="dgCustomer" ItemsSource="{Binding}" GridLinesVisibility="Horizontal" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" SelectionChanged="Customer_Selected" Grid.ColumnSpan="4">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding name}" MaxWidth="200" Width="*"/>
                            <DataGridTextColumn Header="Federal Tax ID" Binding="{Binding FederalTaxId}" MaxWidth="200" Width="*"/>
                            <DataGridCheckBoxColumn Header="Approved" Binding="{Binding IsApproved}" MaxWidth="200" Width="auto"/>
                            <DataGridTextColumn Header="Approved By" Binding="{Binding ApprovedByName}" MaxWidth="200" Width="*"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="auto"/>
                            <DataGridTextColumn Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--End of Customer Data Grid -->
                    <!--Customer Grid -->
                    <Grid Background="#FFE5E5E5" Grid.Row="1" Grid.ColumnSpan="4">
                        <Grid.ColumnDefinitions>
                            <!--Grid Definitions -->
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--End of Grid Definitions-->
                        <!--Customer Controls -->
                        <ComboBox Name="cboCustomerType" Grid.Row="0" Grid.Column="2" Width="200" DropDownClosed="cboCustomerType_Selected" Initialized="cboCustomerType_Initialized" Visibility="Collapsed"/>
                        <Button Name="btnCreateOrder" Content="Create Order" Grid.Row="0" Grid.Column="3" Margin="10 0 0 0" HorizontalAlignment="Left" Click="btnCreateOrder_Click" IsEnabled="False"/>
                        <Button Name="btnCreateCCAccount" Grid.Row="0" Grid.Column="4" Content="Create Account" Margin="10 0 0 0" HorizontalAlignment="left"  Click="Create_CommercialCustomer_Button_Click"/>
                        <Button Name="btnEditCCAccount" Grid.Row="0" Grid.Column="5" Content="Edit Account" Margin="10 0 0 0" HorizontalAlignment="left" IsEnabled="False"/>
                        <Button Name="btnCCAccountApproval" Grid.Row="0" Grid.Column="6" Content="Account Approval" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnCCAccountApproval_Click" />
                        <!--End of Customer Controls -->
                    </Grid>
                    <!--End of Customer Grid-->
                </Grid>
                <!--End of Commercial Customer Grid-->
            </TabItem>
            <!--End of Commercial Customer Tab-->
            <!--User Tab Controls -->
            <TabItem Name="tabUser" Header="User" HorizontalAlignment="Left" Height="20" Margin="0" VerticalAlignment="Top" Width="Auto" Selector.Selected="tabUser_Selected">
                <!--User Grid-->
                <Grid Background="#FFE5E5E5">
                    <!--Grid Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!--End of Grid Definitions-->
                    <!--Users Data Grid-->
                    <DataGrid Name="dgUsers" ItemsSource="{Binding}" GridLinesVisibility="Horizontal" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"  Width="*"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                            <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
                            <DataGridTextColumn Header="State" Binding="{Binding State}" Width="*"/>
                            <DataGridTextColumn Header="Zip" Binding="{Binding Zip}" Width="*"/>
                            <DataGridTextColumn Header="Email Address" Binding="{Binding EmailAddress}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Email Notices?" Binding="{Binding EmaiPreferences}" Width="*"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding UserName}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--End of Users Data Grid-->
                    <!--Users Controls Grid -->
                    <Grid Background="#FFE5E5E5" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--End of Grid Definitions-->
                        <!--Users Controls-->
                        <Button Name="btnResetPassword" Visibility="Collapsed" Grid.Row="0" Grid.Column="1" Click="btnResetPassword_Click">Reset Password</Button>
                        <Button Name="btnCreateUserAccount" Grid.Row="0" Grid.Column="2" Content="Create Account" Click="btnCreateNewUser_Click" Margin="10 0 0 0" HorizontalAlignment="left"/>
                        <Button Name="btnEditUserAccount" Grid.Row="0" Grid.Column="3" Content="Edit Account" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnEditUserAccount_Click"/>
                    </Grid>
                    <!--End of Users Controls Grid -->
                </Grid>
                <!--End of User Grid-->
            </TabItem>
            <!--End of User Tab-->
            <!--Charity Tab-->
            <TabItem Header="Charity" Selector.Selected="tabCharity_Selected">
                <!--Charity Grid-->
                <Grid Background="#FFE5E5E5">
                    <!--Grid Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--Grid Definitions-->
                    <!--Charity Data Grid-->
                    <DataGrid Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0" GridLinesVisibility="Horizontal" Name="dgCharity" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
                        <DataGrid.Columns>
                            <!--<DataGridTextColumn Width="80"  Header="Charity ID" Binding="{Binding CharityID}"></DataGridTextColumn >-->
                            <DataGridTextColumn Width="*" Header="Charity Name" Binding="{Binding CharityName}"></DataGridTextColumn >

                            <!--<DataGridTextColumn Width="100" Header="Status" Binding="{Binding Status}"></DataGridTextColumn >-->
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--End Of Charity Data Grid-->
                    <!--Charity Controls-->
                    <Button Name="btnAddCharity" Content="Add Charity" Grid.Row="1" Grid.Column="2" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnAddCharity_Click" />
                    <Button Name="btnViewCharity" Content="View Charity" Grid.Row="1" Grid.Column="3" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnViewCharity_Click" />
                    <!--<Button Name="btnApproveDeny" Content="Approve / Deny" Grid.Row="1" Grid.Column="1" Click="btnApproveDeny_Click"/>-->
                </Grid>
                <!--End of Charity Grid-->
            </TabItem>
            <!--End of Charity Tab-->
            <!--Employee Tab-->
            <TabItem Header="Employee" Name="tabEmployee"  Selector.Selected="tabEmployee_Selected">
                <!--Employee Grid-->
                <Grid Name="grdEmployee" Background="#FFE5E5E5">
                    <!--Grid Definitions-->
                    <Grid.RowDefinitions>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--End of Grid Definitions-->
                    <!--Employee Data Grid-->
                    <DataGrid Grid.Row="0" Grid.Column="0" GridLinesVisibility="Horizontal"  Grid.ColumnSpan="3" Name="dgEmployee" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" MinWidth="200" Width="auto"/>
                            <DataGridTextColumn Header="Salary" Binding="{Binding Salary}" MinWidth="100" Width="auto"/>
                            <DataGridTextColumn Header="Date Of Birth" Binding="{Binding DateOfBirth}" MinWidth="150" Width="auto"/>
                            <DataGridTextColumn Header="Active" Binding="{Binding Active}" MinWidth="50" Width="auto"/>
                            <DataGridTextColumn Width="*"/>

                        </DataGrid.Columns>
                    </DataGrid>
                    <!--End of Employee Data Grid-->
                    <!--Employee Controls-->
                    <Button Name="btnAddEmployee" Grid.Row="2" Grid.Column="1" Width="auto" Margin="10 0 0 0" VerticalAlignment="Bottom" Content="Add Employee" Click="btnAddEmployee_Click" />
                    <Button Grid.Row="2" Grid.Column="2" Content="Update Employee Information" Width="180" Margin="10 0 0 0" VerticalAlignment="Bottom" Click="Update_Employee_Button_Click"  />
                </Grid>
                <!--End of Employee Grid-->
            </TabItem>
            <!--End of Employee Tab-->
            <!--Product Tab-->
            <TabItem Name="tabProduct" Header="Product" HorizontalAlignment="Left" Height="20" Margin="0" VerticalAlignment="Bottom" Width="Auto" Selector.Selected="tabProduct_Selected">
                <!--Product Grid-->
                <Grid>
                    <!--Grid Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!--End of Grid Definitions-->
                    <!--Product Data Grid-->
                    <DataGrid Name="dgProduct" IsSynchronizedWithCurrentItem="True" GridLinesVisibility="Horizontal"  SelectionMode="Extended"
                              ItemsSource="{Binding}" IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                            <DataGridTextColumn Header="Unit" Binding="{Binding UnitOfMeasurement}"/>
                            <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" />
                            <DataGridTextColumn Header="Delivery Charge Per Unit" Binding="{Binding DeliveryChargePerUnit}"/>
                            <DataGridTextColumn Header="Active" Binding="{Binding Active}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--End of Product Data Grid-->
                    <!--Product Controls Grid-->
                    <Grid Background="#FFE5E5E5" Grid.Row="1">
                        <!--Grid Definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--End of Grid Definitions-->
                        <!--Product Controls-->
                        <Button Name="btnViewProduct" Grid.Row="0" Grid.Column="3" Content="View Product" Margin="10.4,0,0,-0.4" HorizontalAlignment="left" Height="22" VerticalAlignment="Bottom" Click="btnViewProduct_Click"/>
                        <Button Name="btnAddProduct" Grid.Row="0" Grid.Column="2" Content="Add Product" Margin="10.4,0,0,-0.4" HorizontalAlignment="left" Height="22" VerticalAlignment="Bottom" Click="btnAddProduct_OnClick"/>
                        <Button Name="btnAddCategory" Grid.Row="0" Grid.Column="1" Content="Add Category" Margin="10.4,0,0,-0.4" HorizontalAlignment="left" Height="22" VerticalAlignment="Bottom" Click="btnAddCategory_Click"  />
                    </Grid>
                    <!--End of Product Controls Grid-->
                </Grid>
                <!--End of Product Grid-->
            </TabItem>
            <!--End of Product Tab-->
            <!--Product Lot Tab-->
            <TabItem Name="tabProductLot" Header="Product Lot" HorizontalAlignment="Left" Height="20" Margin="0" VerticalAlignment="Top" Width="Auto" Selector.Selected="tabProductLot_Selected" >
                <!--Product Lot Grid-->
                <Grid Background="#FFE5E5E5">
                    <!--Grid Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="210*"/>
                        <ColumnDefinition Width="1047*"/>
                    </Grid.ColumnDefinitions>
                    <!--End of Grid Definitions-->
                    <!--Product Lot Data Grid -->
                    <DataGrid x:Name="dgProductLots" Grid.Row="0"  Grid.Column="0" GridLinesVisibility="Horizontal"  SelectionMode="Extended"
                               AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="dgProductLots_Mouse_Double_Click" Grid.ColumnSpan="3" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Width="2*" Binding="{Binding ProductName}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Warehouse" Width="*" Binding="{Binding WarehouseId}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Supplier" Width="1.5*" Binding="{Binding SupplierName}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Location" Width="*" Binding="{Binding LocationId}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Supply Manager" Width="2*" Binding="{Binding SupplyManagerId}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Quantity" Width="*" Binding="{Binding Quantity}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Date Received" Width="2*" Binding="{Binding DateReceived}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Date Expiring" Width="2*" Binding="{Binding ExpirationDate}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Grade" Width="*" Binding="{Binding Grade}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Price" Width="*" Binding="{Binding Price}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--End of Product Data Grid-->
                    <!--Product Lot Controls Grid-->
                    <Grid Background="#FFE5E5E5" Grid.Row="1" Grid.ColumnSpan="3">
                        <!--Grid Definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--End of Grid Definitions-->
                        <!--Product Lot Controls-->
                        <Button Name="btnSplitLot" Grid.Row="0" Grid.Column="1" Content="Split Product Lot" Margin="10 0 5 0" VerticalAlignment="Top" Click="btnSplitLot_Click"/>
                        <Button Name="btnFilterLots" Grid.Row="0" Grid.Column="2" Content="Filter Product Lots" Margin="10 0 5 0" VerticalAlignment="Top" Click="btnFilterProductLots_Click"/>
                        <Button Name="btnCreateLot" Grid.Row="0" Grid.Column="3" Content="Add Product Lot" Margin="10 0 5 0" VerticalAlignment="Top" Click="btnAddProductLot_Click"/>
                        <Button Name="btnCreateInspection" Grid.Row="0" Grid.Column="4" Margin="10 0 5 0" Content="Create Inspection" HorizontalAlignment="left" Click="btnCreateInspection_Click" />
                        <Button Name="btnManageStock" Grid.Row="0" Grid.Column="5" Margin="10 0 5 0" Content="Manage Stock" HorizontalAlignment="left" Click="btnManageStock_Click" />

                    </Grid>
                    <!--End of Product Lot Controls Grid-->
                </Grid>
                <!--End of Product Lot Grid-->
            </TabItem>
            <!--End of Product Lot Tab-->
            <!--Supplier Tab-->
            <TabItem Name="tabSupplier" Header="Supplier" HorizontalAlignment="Left" Height="20" Margin="0" VerticalAlignment="Top" Width="Auto" Selector.Selected="tabSupplier_Selected">
                <!--Supplier Tab Grid-->
                <Grid Background="#FFE5E5E5">
                    <!--Grid Definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!--Supplier Status Grid-->
                    <Grid>
                        <!--Grid Definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <!--End of Grid Definitions-->
                        <!--Supplier Status  Controls-->
                        <ComboBox Name="cboSupplierStatus" Margin="5" SelectionChanged="cboSupplierStatus_SelectionChanged"  />
                        <!--End of Supplier Status Controls-->
                    </Grid>
                    <!--End of Supplier Status Grid-->
                    <!--Suppliers Data Grid-->
                    <DataGrid Name="dgSuppliers" Grid.Row="1" ItemsSource="{Binding}" GridLinesVisibility="Horizontal" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                    	CanUserDeleteRows="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Farm Name" Binding="{Binding FarmName}" Width="*"/>
                            <DataGridTextColumn Header="Farm Address" Binding="{Binding FarmAddress}" Width="*"/>
                            <DataGridTextColumn Header="City" Binding="{Binding FarmCity}" Width="*"/>
                            <DataGridTextColumn Header="State" Binding="{Binding FarmState}" Width="*"/>
                            <DataGridTextColumn Header="Tax ID" Binding="{Binding FarmTaxID}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Is Approved" Binding="{Binding IsApproved}" Width="auto"/>
                            <DataGridTextColumn Header="Approved By" Binding="{Binding ApprovedByName}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Active"  Binding="{Binding Active}" Width="auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--Supplier Controls Grid-->
                    <Grid Background="#FFE5E5E5" Grid.Row="2">
                        <!--Grid Definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--End of Grid Definitions-->
                        <!--Suppliers Controls-->
                        <Button Name="btnSupplierApproval" Grid.Row="0" Grid.Column="1" Content="Supplier Approval" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnSupplierApproval_Click"/>
                        <Button Name="btnViewOpenApps" Grid.Row="0" Grid.Column="3" Content="View Application Details" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnViewOpenApps_Click" VerticalAlignment="Bottom"/>
                        <Button Name="btnAddSupplier" Grid.Row="0" Grid.Column="4" Content="Create Supplier" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnCreateSupplier_Click"/>
                        <Button Name="btnEditSupplier" Grid.Row="0" Grid.Column="5" Content="Edit Supplier" Margin="10 0 0 0" HorizontalAlignment="left" Click="btnEditSupplier_Click"/>
                        <Button Name="btnApplyForSupplierAct" Grid.Row="0" Grid.Column="2" Content="Apply for Account" Margin="10,0,0,0" HorizontalAlignment="Left" Click="btnApplyForSupplierAct_Click" VerticalAlignment="Top" />
                        <!--End of Suppliers Controls-->
                    </Grid>
                    <!--End of Suppliers Controls Grid-->
                </Grid>
                <!--End of Suppliers Grid-->
            </TabItem>
            <!--End of Suppliers tab -->
            <!--Supplier Catalog Tab-->
            <TabItem Name="tabSupplierCatalog" Header="Supplier Catalog" HorizontalAlignment="Left" Height="20" Margin="0" VerticalAlignment="Top" Width="Auto" Selector.Selected="tabSupplierCatalog_Selected" Visibility="Collapsed">
                <Grid Background="#FFE5E5E5">
                    <!--Grid Definitions-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36*"/>
                        <RowDefinition Height="36"/>
                    </Grid.RowDefinitions>
                    <!--End of Grid Definitions-->
                    <!--Top Border-->
                    <Border Grid.Column="3" Grid.ColumnSpan="17" Grid.Row="0" FlowDirection="LeftToRight"
                            BorderBrush="Black" BorderThickness="0 0 0 2">
                        <StackPanel Orientation="Horizontal" >
                            <!--Search Controls-->
                            <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="1" Margin="10 5 5 5"
                                Grid.ColumnSpan="6">
                                <TextBox Name="txtSearchCriteria" Width="250"/>
                                <Button Name="btnSearch" Content="Search" Width="100" Margin="5 0 5 0"/>
                            </StackPanel>
                            <!--End of Search Controls-->
                        </StackPanel>
                    </Border>
                    <!--End of Top Border-->
                    <!--Top Border Left Edge-->
                    <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" FlowDirection="LeftToRight">
                        <StackPanel Orientation="Horizontal" >
                            <!--Software Logo-->
                            <Image Height="36"/>
                            <!--End of Software Logo-->
                        </StackPanel>
                    </Border>
                    <!--End of Top Border Left Edge-->
                    <!--Side Border-->
                    <Border Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1" Grid.RowSpan="17"
                            BorderBrush="Black" BorderThickness="0 0 2 0">
                        <!--Supplier Controls Stack Panel-->
