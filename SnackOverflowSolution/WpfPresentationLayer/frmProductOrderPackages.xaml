<Window x:Name="frmOrderPackages" x:Class="WpfPresentationLayer.frmProductOrderPackages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Packages" Height="250" Width="300" MinHeight="250" MinWidth="300" MaxWidth="300" MaxHeight="250" Loaded="frmOrderPackages_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListView x:Name="listPackages" Grid.Row="0" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="3" 
                  Margin="5" MouseDoubleClick="listPackages_MouseDoubleClick"/>

        <Button x:Name="btnAddPackage" Grid.Row="1" Content="Add" Margin="10" Click="btnAddPackage_Click"/>
        <Button x:Name="btnReadyForShipment" Grid.Row="1" Grid.Column="1" Content="Ready For Shipment" Margin="10" Click="btnReadyForShipment_Click"/>
    </Grid>
</Window>
