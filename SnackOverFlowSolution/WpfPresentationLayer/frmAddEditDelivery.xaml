<Window x:Class="WpfPresentationLayer.frmAddEditDelivery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Delivery" Height="200" Width="230" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="lblAddEditDelivery" Grid.Row="0" Grid.ColumnSpan="2" Content="Add New Delivery" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Date:" HorizontalAlignment="Right" VerticalAlignment="Top" />
        <DatePicker Grid.Row="1" Grid.Column="1" Name="dtpckDeliveryDate" HorizontalAlignment="Left"   Text="" VerticalAlignment="Top"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Status:" HorizontalAlignment="Right"  VerticalAlignment="Top"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Name="comBoxStatus" HorizontalAlignment="Left"  VerticalAlignment="Top" />
        <Label Grid.Row="3" Grid.Column="0" Content="Type:" HorizontalAlignment="Right"  VerticalAlignment="Top" />
        <ComboBox Grid.Row="3" Grid.Column="1" Name="comBoxType" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Grid.Row="4" Grid.Column="0" Name="btnCancel" Content="Cancel" HorizontalAlignment="Right"  VerticalAlignment="Top" Click="btnCancel_Click"/>
        <Button Grid.Row="4" Grid.Column="1" Name="btnSave" Content="Save" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="btnSave_Click">
            <Button.Width>
                <Binding ElementName="btnCancel" Path="ActualWidth"/>
                <!--This makes sure that the save button is the same width as the cancel button.-->
            </Button.Width>
        </Button>
    </Grid>
</Window>
