<Window x:Class="WpfPresentationLayer.frmSelectSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Supplier" Height="200" Width="300" Loaded="Window_Loaded" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Name="lblHeader" Grid.Row="0" Content="Select Supplier" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"/>
        <ComboBox Name="cboSuppliers" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="40 5"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Name="btnBack" Grid.Column="0" Content="Back" Margin="10" IsCancel="True"/>
            <Button Name="btnNext" Grid.Column="1" Content="Next" Margin="10" IsDefault="True" Click="btnNext_Click"/>
        </Grid>
    </Grid>
</Window>
