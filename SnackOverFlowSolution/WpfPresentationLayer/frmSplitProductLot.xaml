<Window x:Class="WpfPresentationLayer.frmSplitProductLot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentationLayer"
        mc:Ignorable="d"
        Title="frmSplitProductLot" Height="115" Width="240">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Original Quantity"/>
        <Label Grid.Column="1" Content="New Quantity"/>
        <TextBox Grid.Row="1" Name="txtOld" PreviewTextInput="txtOld_PreviewTextInput" TextChanged="txtOld_TextChanged"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="txtNew" Text="0" TextChanged="txtNew_TextChanged" PreviewTextInput="txtNew_PreviewTextInput"/>
        <Button Name="btnCancel" IsCancel="True" Grid.Row="2" Content="Cancel" Click="btnCancel_Click"/>
        <Button Name="btnSave" IsDefault="True" Grid.Row="2" Content="Save" Grid.Column="1" Click="btnSave_Click"/>
    </Grid>
</Window>
