@model MVCPresentationLayer.Models.CartPageModel

@{
    ViewBag.Title = "View Cart";
}

<h2>Cart:</h2>
<table>
        <tr>
            <th>Product Name:</th>
            <th>Grade:</th>
            <th>Quantity:</th>
            <th>Total:</th>
            <th>Remove:</th>
        </tr>
    @foreach (var cartItem in Model.ItemsInCart)
    {
        <tr>
            <td>@cartItem.Name</td>
            <td>@cartItem.GradeID</td>
            <td>@cartItem.Quantity</td>
            <td>@cartItem.Total</td>
            <th><form action="RemoveFromCart" method="post">
                    <input type="hidden" name="userId" value="@cartItem.UserID" />
                    <input type="hidden" name="productId" value="@cartItem.ProductID" />
                    <input type="hidden" name="quantity" value="@cartItem.Quantity" />
                    <input type="hidden" name="gradeId" value="@cartItem.GradeID" />
                    <input type="submit" class="btn btn-sm btn-warning" value="Remove" name="submit" />
                </form>
            </th>
        </tr>
    }
</table>
<form method="post" action="LoadOrder">
    <select name="orderID">
        @foreach (var orderID in Model.SavedOrderList)
        {
            <option value="@orderID">@orderID</option>
        }
    </select>
    <input type="submit" value="Load" name="load" />
</form>
<div class="text-center">
    @Html.ActionLink("Continue Shpping", "Index", "Products", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Checkout now", "Checkout", "Cart", null, new { @class = "btn btn-primary" })
</div>

