@model MVCPresentationLayer.Models.ProductsListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Available Products</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.UnitPrice)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Product.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.UnitOfMeasurement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.DeliveryChargePerUnit)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ImageBinary)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model.Products)
    {
        <tr>
            @Html.Partial("_ProductSummary", item)
        </tr>
    }

</table>