@model MVCPresentationLayer.Models.SupplierUpdateAgreementViewModel
@{
    ViewBag.Title = "Update Agreements";
    Layout = "~/Views/Shared/_AccountsLayout.cshtml";
}

@*Start Main Header*@
<header class="main-header custom-bg41 parallax" data-stellar-background-ratio="0.5" id="top">
    <div class="logo-container align-center style2">
        <a href="#" class="logo">
            <img src="~/Images/slider-images/lolgobg2.png" alt="Snack Overflow Logo" />
        </a>
        <h1 style="color: white;">Edit Agreements</h1>
    </div>
</header>
@*End of Main Header*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="store-checkout" style="margin-bottom: -100px">
        <div class="container wow fadeInDown billing-address">
            <div class="row">
                <div class="col-md-12" style="margin-bottom: 20px;">
                    <h3>Update Agreements</h3>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <hr />
                </div>

                <div class="form-group col-md-12">
                    <div class="list-group" data-toggle="items">
                        @Html.ListBoxFor(model => model.ProductIDs, new MultiSelectList(Model.ProductsToSelect, "ProductId", "Name", Model.ProductIDs), new { Multiple = "multiple", @class = "list-group" })
                    </div>
                </div>

                <div class="col-md-12 align-right">
                    <input type="submit" value="Save" class="custom-button button-style3 filled medium" />
                    <p>@ViewBag.Message</p>
                </div>

                <div class="col-md-12 align-right">
                    <hr />
                    <div>
                        <h3>@Html.ActionLink("Back to Details", "Edit", new { username = User.Identity.Name })</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

